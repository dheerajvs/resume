mixin ga(gaId)
  script.
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{gaId}', 'auto');
    ga('send', 'pageview');

mixin profile(profile)
  li
    +profileIcon(profile)
    a(href=profile.url)= profile.username

mixin profileIcon(profile)
  if profile.network == 'Github'
    span.fa.fa-github
  if profile.network == 'Twitter'
    span.fa.fa-twitter

mixin section(type, icon)
  section.segment.article-section(class=type.toLowerCase())
    header
      h2
        span.section-icon(class='fa ' + icon)
        span.section-title= type
    if block
      .section-body
        block

mixin time(date)
  time(datetime=date)= date
